{
  "name": "@listen-fair-play/processing",
  "private": true,
  "version": "0.0.1",
  "description": "Process podcast RSS feeds, download audio, and transcribe content",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build:local": "dotenvx run -f ../../.env.local -- tsc",
    "build:dev": "dotenvx run -f ../../.env.dev -- tsc",
    "run-rss:local": "dotenvx run -f ../../.env.local -- tsx lamdas/retrieve-rss-feeds-and-download-audio-files.ts",
    "run-rss:dev-s3": "dotenvx run -f ../../.env.dev -- tsx lamdas/retrieve-rss-feeds-and-download-audio-files.ts",
    "run-whisper:local": "dotenvx run -f ../../.env.local -- tsx lamdas/process-new-audio-files-via-whisper.ts",
    "run-whisper:dev-s3": "dotenvx run -f ../../.env.dev -- tsx lamdas/process-new-audio-files-via-whisper.ts",
    "run-search-conversion:local": "NODE_OPTIONS=--max_old_space_size=8192 dotenvx run -f ../../.env.local -- tsx lamdas/convert-srt-files-into-search-entries.ts",
    "run-search-conversion:dev-s3": "dotenvx run -f ../../.env.dev -- tsx lamdas/convert-srt-files-into-search-entries.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "catalog:",
    "@aws-sdk/credential-provider-sso": "catalog:",
    "@aws-sdk/s3-request-presigner": "catalog:",
    "@listen-fair-play/constants": "workspace:*",
    "@listen-fair-play/s3-utils": "workspace:*",
    "@listen-fair-play/utils": "workspace:*",
    "axios": "^1.6.7",
    "flexsearch": "catalog:",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "catalog:",
    "openai": "^4.28.0",
    "srt-parser-2": "^1.2.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@listen-fair-play/types": "workspace:*",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/fs-extra": "catalog:",
    "@types/node": "^20.0.0",
    "@types/xml2js": "^0.4.14",
    
    "tsx": "^4.7.0",
    "typescript": "catalog:",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}